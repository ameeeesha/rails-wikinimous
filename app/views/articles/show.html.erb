<h2> <%= @article.title %></h2>
<p><%= @article.content %></p>

<p>
  <%= link_to 'Edit article', edit_article_path, class: 'btn btn-light my-3' %>
  <%= link_to 'Delete article', article_path(@article), class: 'btn btn-light my-3', data: { turbo_method: :delete, turbo_confirm: "Delete #{@article.title}?" } %>
  <%= link_to 'Back to list', articles_path, class: 'btn btn-light my-3' %>
</p>
