<h1>Articles</h1>
<p>
  <%= link_to 'Add a new article', new_article_path, class: 'btn btn-light my-3' %>
</p>
<ol>
  <% @articles.each do |article| %>
        <li><%= link_to article.title, article_path(article), class: 'text-decoration-none'%> </li>
        <ul>
          <li><%= article.content %></li>
        </ul>
  <% end %>
</ol>
